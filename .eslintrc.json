{
    "extends": [
        "airbnb-base"
    ],
    "plugins": [
        "jest"
    ],
    "rules": {
        "curly": ["error", "all"],
        "template-tag-spacing": "off",
        "import/prefer-default-export": "off",
        "function-paren-newline": "off",
        "arrow-parens": "off",
        "padded-blocks": "off",
        "max-len": ["error", { "code": 120 }],
        "comma-dangle": "off",
        "eol-last": "off"
    },
    "env": {
        "node": true,
        "jest/globals": true
    }
}