{
  "service": "reactive-ratebeer-lambdas",
  "plugins": [
    "serverless-webpack"
  ],
  "provider": {
    "name": "aws",
    "runtime": "nodejs6.10",
    "region": "eu-west-1",
    "environment": "${file(./env.json)}"
  },
  "functions": {
    "beers": {
      "handler": "lambdas/beers.handler",
      "events": [
        {
          "http": {
            "path": "beers",
            "method": "get",
            "cors": true
          }
        }
      ]
    }
  }
}